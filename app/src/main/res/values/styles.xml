<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextContent" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextContent.heading">
        <item name="android:textColor">@color/colorSubTitle</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextContent.title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextContent.subtitle">
        <item name="android:textColor">@color/colorSubTitle</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextContent.desciption">
        <item name="android:textColor">@color/colorSubTitle</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextContent.list">
        <item name="android:textColor">@color/colorSubTitle</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
